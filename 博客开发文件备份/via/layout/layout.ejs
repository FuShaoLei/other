
<%
var pageTitle = page.title || config.subtitle || '';
if (is_archive()) pageTitle = 'Archives';
if (is_tag()) pageTitle = 'Tag: ' + page.tag;
if (is_category()) pageTitle = 'Category: ' + page.category;
if (is_month()) pageTitle += ': ' + page.month + '/' + page.year;
if (is_year()) pageTitle += ': ' + page.year;
pageTitle += ' [ ' + config.title + ' ]';
%>

<!DOCTYPE html>
<html lang="zh-Hans">
<head>
  <meta charset="UTF-8">
  <title><%=pageTitle%></title>
  <link rel="shortcut icon" href="<%- url_for(theme.icon)%>">
  <link rel="stylesheet" href="https://cdn.bootcss.com/font-awesome/5.11.2/css/all.css">
  <%- css(['css/via.css','css/side.css','css/post.css','css/index.css']) %> 
</head>
<body>
<div class="flex-container">
  <div class="left-side">
    <%-partial('_partials/side')%>
  </div>

  <div class="right-side">

<div id="content-outer">
  <div id="content-inner">
    <%- body %>
  </div>
</div>

 
  </div>
</div>


<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js"></script>
<%- js('js/via.js') %>

</body>
</html>
